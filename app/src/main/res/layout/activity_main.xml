<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="#46632C"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="#74D362"
            android:textSize="30sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#74D362"
        android:gravity="center"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/powersave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_powersave_mode"
                android:textColor="#74D362"
                android:textSize="22sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_balance_mode"
                android:textColor="#74D362"
                android:textSize="22sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/performance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_performance_mode"
                android:textColor="#74D362"
                android:textSize="22sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_fast_mode"
                android:textColor="#74D362"
                android:textSize="22sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/super_powersave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_super_powersave_mode"
                android:textColor="#74D362"
                android:textSize="22sp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/go_app_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11sp"
                android:backgroundTint="#46632c"
                android:text="@string/string_app_list_config"
                android:textColor="#74D362"
                android:textSize="22sp" />
        </GridLayout>

    </LinearLayout>
</LinearLayout>